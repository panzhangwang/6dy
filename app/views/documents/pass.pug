extends ../layouts/default

block main
  h2= title
  hr

block content
  .row
    .col-6
      - if (isManager || pc.id == document.pc.id)
        form(method="post", action="/documents/"+document._id+"/pass", role="form")
          input(type="hidden", name="_csrf", value=csrf_token)

          .form-group
            label(for='title') 名称
            input.form-control#title(type='text', name="title", value=document.title, readonly)

          .form-group
            label(for='pass') 密码
            input.form-control#pass(type='password', name="pass")


          button.btn.btn-primary(type='submit') 保存
          | &nbsp;
          a.btn.btn-default(href='/rooms/'+room._id, title="取消") 取消
      